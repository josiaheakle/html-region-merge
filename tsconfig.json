{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strictNullChecks": false,
    "moduleResolution": "node"
  },
  "include": [
    "/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
